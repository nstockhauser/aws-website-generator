terraform {
  backend "s3" {
    bucket         = "{{ bucket }}"
    key            = "wordpress/terraform.tfstate"
    region         = "{{ region }}"
    dynamodb_table = "terraform-state-locking"
    encrypt        = true
  }

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.0"
    }

    tls = {
      source  = "hashicorp/tls"
      version = "~> 4.0"
    }

    http = {
      source  = "hashicorp/http"
      version = "3.3.0"
    }

  }
}

provider "aws" {
  region = "{{ region }}"



  default_tags {
    tags = {
      Environment = "Wordpress"
    }
  }

}

